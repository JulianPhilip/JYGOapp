<div class="container">

  <div class= "text-center">
    <h1> Bienvenu sur Jygo!!</h1>
    <h2>vous pouvez proccéder à votre commande si un shopper est libre</h2>
  </div>


<div class="login-container">
        <h5>LOG IN AND CONTINUE LEARNING</h5><br>
        <%= simple_form_for(User.new, as: :user, url: session_path(:user)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true, placeholder: "email or username" %>
    <%= f.input :password, required: false, placeholder: "password" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "login-submit" %>
  </div>
  <% end %>
</div>

</div>


