<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title) || "JYGO" %></title>
  <meta name="The crowdsourced shopping service" content="<%= (yield(:description) || "").squish %>">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <%= stylesheet_link_tag 'application', params[:controller], media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

	<div class="backround-img blur" style="background:url(https://i.imgur.com/66nKj6x.jpg)"></div>

	<%= render 'shared/navbar' %>

  <%= render 'shared/notices' %>

	<div id="openModal" class="modal-dialog login">
		        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <a href="#close" class="closeModal btn btn-default btn-sm pull-right"><span class="glyphicon glyphicon-remove"></span></a>
                    <h4 class="modal-title" id="myModalLabel">Login</h4>
                </div>
                <div class="modal-body">
                    <center>
	                    <h3 class="media-heading">
	                    <small>
	                    <%= simple_form_for(User.new, as: :user, url: session_path(:user)) do |f| %>
	                    <%= f.input :email, required: false, autofocus: true, placeholder: "email or username", class:"emailInput" %>
					    <%= f.input :password, required: false, placeholder: "password", class:"passwordInput" %>

						    <%= f.button :submit, "Log in", class: "btn btn-default" %>
						<% end %>
	                    </small>
	                    </h3>
                    </center>
                    <hr>
                    <center>
                    <%= link_to "Sign up", new_user_registration_path, class: "btn btn-default" %>
                    <a href="/users/password/new" class="btn btn-default">Forgot your password?</a>
                    </center>
                </div>
            </div>
        </div>
	</div>


  <%= javascript_include_tag "https://maps.google.com/maps/api/js?sensor=false" %>
  <%= javascript_include_tag "https://google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js" %>
  <%= javascript_include_tag "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js" %>


  <%= javascript_include_tag 'application', params[:controller], 'data-turbolinks-track' => true %>


	<%= yield %>


  <%= yield(:after_js)%>


</body>
</html>
