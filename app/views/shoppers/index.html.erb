<h1>Shoppers disponibles</h1>


<table class="table table_striped">
  <thead>
    <tr>
      <th>Shoppers</th>
      <th>Pr√©nom</th>
      <th>Nom</th>
      <th>Email</th>
      <th>Adresse</th>
      <th>Rayon d'action</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shoppers.each_with_index do |shopper, index| %>
      <tr>
        <td><%= image_tag shopper.user.picture, width:"100px" %></td>
        <td><%= shopper.user.firstname %></td>
        <td><%= shopper.user.lastname %></td>
        <td><%= shopper.user.email %></td>
        <td><%= shopper.user.address %>, <%= shopper.user.zip_code %> <%= shopper.user.city %></td>
        <td><%= shopper.default_radius %></td>
        <td><%= form_tag orders_path do %>
            <%= hidden_field_tag 'shopper_id', shopper.id %>
            <%= hidden_field_tag 'date', @selected_date %>
            <%= submit_tag 'choisir ce shopper' %>
            <% end %></td>
      </tr>
  </tbody>
</table>
<!--  New Possibility -->


<div style='width: 800px;'>
  <div id="map" style='width: 800px; height: 400px;'></div>
</div>


<div class="container">
    <section>
        <div class="users1">
          <div class="row">    
                <div class="col-lg-3 col-md-4 col-xs-6">
                    <div class="panel panel-default">
                      <div class="panel-heading"><%= shopper.user.firstname %> <%= shopper.user.lastname %></div>
                      <div class="panel-body">
                        <div class="media">
                          <div class="media-left media-middle">
                            <a href="#">
                              <img class="media-object" src="http://i.imgur.com/p2PSvaa.png" alt="...">
                            </a>
                          </div>
                          <div class="media-body">
                            <p><b>Total Posts:</b> 1,765</p>
                            <p><b>Points:</b> 32,455</p>
                            <p><b>Joining Dtae:</b> 01-Oct-2015</p>
                          </div>
                        </div>
                      </div>
                    </div>
                </div>
                
                
          </div>
        </section>
        
        <section>
      <div class="users2">
        <div class="row">

          <div class="col-sm-6 col-xs-12 full-width">
            <div class="media">
              <div class="media-left media-middle">
                <div class="image loader">
                  <img src="http://i.imgur.com/p2PSvaa.png" class="borderStyle" alt="">
                </div>
              </div>

              <div class="media-body bio">
                <h1 class="name"><%= shopper.user.firstname %> <%= shopper.user.lastname %></h1>
                <p>
                  <span class="heading">Address</span> <%= shopper.user.zip_code %> <%= shopper.user.city %>
                </p>
                <p>
                  <span class="heading">Rayon d'action:</span> <%= shopper.default_radius %> km
                </p>
                <p>
                  <span class="heading">Mail</span> <%= shopper.user.email %> 
                </p>
              </div>
              <div class="media-right">
                <div class="follow transition">
                  <a href="" class="btn btn-follow btn-sm"><i class="fa fa-plus"></i>Choisir</a>
                </div>
                <p class="rating">
                  <span class="heading">Rating:</span> 5/5
                </p>
                <span>
                  <i class="fa fa-star"></i>
                  <i class="fa fa-star"></i>
                  <i class="fa fa-star"></i>
                  <i class="fa fa-star"></i>
                  <i class="fa fa-star"></i>
                </span>
              </div>
            </div>
          </div> <!--/col-->

          

        </div>
      </div>
    </section>
            
  </div>
</div>
<% end %>