<h1>Vos disponibilités</h1>
<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Date</th>
      <th colspan="3">Acceptation Automatique</th>
    </tr>
  </thead>

  <tbody>
    <% @availabilities.each do |availability| %>
      <tr>
        <td><%= availability.id %></td>
        <td><%= availability.date %></td>
        <td><%= link_to 'Visualiser', availabilities_show_path %></td>
        <td><%= link_to 'Editer', availabilities_edi_path(availability) %></td>
        <td><%= link_to 'Supprimer', availability, method: :delete, data: { confirm: 'Êtes-vous certain de vouloir supprimer cette disponibilité ?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nouvelle disponibilité', availabilities_new_path %>
