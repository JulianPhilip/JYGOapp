<div class="wizard">
    <div class="wizard-inner">
        <ul class="nav nav-tabs" role="tablist">

            <% if controller_name == "searchs" %>
            <li role="presentation" class="active">
            <% else  %>
            <li role="presentation" class="disabled">
            <% end  %>
                <a href="#step1" data-toggle="tab" aria-controls="step1" role="tab" title="Step 1">
                    <span class="round-tab">
                        <i class="glyphicon glyphicon-calendar white"></i>
                    </span>
                </a>
                <center>
                        <p class="text-muted">Choix de Date</p>
                </center>
            </li>

            <% if controller_name == "shoppers" %>
            <li role="presentation" class="active">
            <% else  %>
            <li role="presentation" class="disabled">
            <% end  %>
                <a href="#step2" data-toggle="tab" aria-controls="step2" role="tab" title="Step 2">
                    <span class="round-tab">
                        <i class="glyphicon glyphicon-user white"></i>
                    </span>
                </a>
                <center>
                        <p>Trouver Shopper</p>
                </center>        
            </li>
            <% if controller_name == "orders" %>
            <li role="presentation" class="active">
            <% else  %>
            <li role="presentation" class="disabled">
            <% end  %>
                <a href="#step3" data-toggle="tab" aria-controls="step3" role="tab" title="Step 3">
                    <span class="round-tab">
                        <i class="glyphicon glyphicon-list-alt white"></i>
                    </span>
                </a>
                <center>
                        <p>Faites votre Liste</p>
                </center>        
            </li>

            <% if controller_name == "orders" %>
            <li role="presentation" class="active">
            <% else  %>
            <li role="presentation" class="disabled">
            <% end  %>
                <a href="#complete" data-toggle="tab" aria-controls="complete" role="tab" title="Complete">
                    <span class="round-tab">
                        <i class="glyphicon glyphicon-thumbs-up white"></i>
                    </span>
                </a>
                <center>
                    <p>Recevez !</p>
                </center>
            </li>
        </ul>
    </div>
</div>
