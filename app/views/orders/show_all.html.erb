<h1>Orders</h1>

<table class="table table_striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Shopper</th>
      <th>status_exec</th>
      <th>total_amount</th>
      <th>commission</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each_with_index do |order, index| %>
      <tr>
        <td><%= order.date %></td>
        <td><%= order.shopper.firstname %></td>
        <td><% if order.status_exec == true %>
            <%= order.total_amount %>
            <% else %>
            <%=  "Indisponible" %></td>
        <td><% if order.status_exec == true %>
            <%= order.commission %>
            <% else %>
            <%=  "Indisponible" %></td>
        <td><% if order.status_exec == true %>
            <%= "EffectuÃ©e" %>
            <% else %>
            <%= "En cours" %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Choisir', :root, class: "btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

