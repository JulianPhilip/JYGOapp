<h1>Orders</h1>

<table class="table table_striped">
  <thead>
    <tr>
      <th>user_id</th>
      <th>shopper_id</th>
      <th>date</th>
      <th>status_exec</th>
      <th>total_amount</th>
      <th>commission</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each_with_index do |product, index| %>
      <tr>
        <td><%= order.user_id %></td>
        <td><%= order.shopper_id %></td>
        <td><%= order.date %></td>
        <td><%= order.status_exec %></td>
        <td><%= order.total_amount %></td>
        <td><%= order.commission %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Choisir', :root, class: "btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

